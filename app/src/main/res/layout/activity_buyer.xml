<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.Buyer">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="Fill the Form Below"
            android:layout_width="match_parent"
            android:id="@+id/textView9"
            android:layout_height="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout4" />

        <TextView
            android:text="First Name"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Paul"
            android:ems="10"
            android:id="@+id/editText4"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Last Name"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView4"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Mutambuze"
            android:ems="10"
            android:id="@+id/editText5"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Email"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView6"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. pmutambuze@cis.mak.ac.ug"
            android:ems="10"
            android:id="@+id/editText7"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Gender"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView7"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="Male / Female"
            android:ems="10"
            android:id="@+id/editText8"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Phone number"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView10"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. 075 3 222 529"
            android:ems="10"
            android:id="@+id/editText11"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="District"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView12"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Wakiso"
            android:ems="10"
            android:id="@+id/editText13"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Sub County"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView14"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Gombe"
            android:ems="10"
            android:id="@+id/editText15"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Parish"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView16"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Jagala"
            android:ems="10"
            android:id="@+id/editText17"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Password"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView18"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. R67@hijQ"
            android:ems="10"
            android:id="@+id/editText19"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Re-Enter Password"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView20"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. R67@hijQ"
            android:ems="10"
            android:id="@+id/editText21"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />


        <TextView
            android:text="Delivery Address"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView22"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Plot 4 Luthuli Ave."
            android:ems="10"
            android:id="@+id/editText23"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <Button
            android:text="Take Picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:id="@+id/button5"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/idImageView"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:gravity="center"
            android:background="@android:drawable/ic_menu_camera"
            android:layout_above="@+id/editText11"
            android:foregroundGravity="center"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Register"
            android:background="@color/g"
            android:textColor="@color/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button6" />


    </LinearLayout>


</RelativeLayout>
    </ScrollView>
