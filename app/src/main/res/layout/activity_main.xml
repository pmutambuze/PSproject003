<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@mipmap/pic1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.MainActivity"
    android:requiresFadingEdge="horizontal|vertical">


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:textAlignment="center"
    android:text="WELCOME TO"
    android:id="@+id/textView"
    android:textSize="40dip"
    android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
    android:textColor="?attr/colorSwitchThumbNormal"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView1"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="FARMER"
        android:drawableLeft="@mipmap/far"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textSize="24sp"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:fontFamily="sans-serif-condensed"
        style="@android:style/ButtonBar"
        android:shadowColor="@android:color/background_light"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="53dp" />

    <Button
        android:text="BUYER"
        android:drawableLeft="@mipmap/icons8"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="24sp"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:fontFamily="sans-serif-condensed"
        style="@android:style/ButtonBar"
        android:shadowColor="@android:color/background_light"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="28dp" />

    <Button
        android:text="MARKET"
        android:drawableLeft="@mipmap/market"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="24sp"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:fontFamily="sans-serif-condensed"
        style="@android:style/ButtonBar"
        android:shadowColor="@android:color/background_light"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="23dp" />

    <Button
        android:text="ADMINISTRATOR"
        android:drawableLeft="@mipmap/admin"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:textSize="24sp"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:fontFamily="sans-serif-condensed"
        style="@android:style/ButtonBar"
        android:shadowColor="@android:color/background_light"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:textAlignment="center"
        android:text="LUSUKU MOBILE"
        android:id="@+id/textView1"
        android:textSize="40dip"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/colorSwitchThumbNormal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
