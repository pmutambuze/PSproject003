<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.AdminLogin">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Admin ID"
        android:textAlignment="center"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/editText14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/editText15"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/editText22"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:hint="User Name"
        android:ems="10"
        android:id="@+id/editText22"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/editText14"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Forgot Password?"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/i"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:textColor="@color/zc"
        android:background="@color/i"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/editText15"
        android:layout_alignParentStart="true" />


</RelativeLayout>
