<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_market_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.MarketPlace">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <Button
            android:text="Available markets"
            android:layout_width="match_parent"
            android:textColor="@color/zc"
            android:background="@color/i"
            android:layout_height="wrap_content"
            android:id="@+id/avmarkets"
            android:layout_marginTop="32dp"
             />

        <Button
            android:text="Farmers Trading"
            android:layout_width="match_parent"
            android:textColor="@color/zc"
            android:background="@color/i"
            android:layout_height="wrap_content"
            android:id="@+id/farmerstrading"
            android:layout_marginTop="32dp"
             />

        <Button
            android:text="search"
            android:layout_width="match_parent"
            android:textColor="@color/zc"
            android:background="@color/i"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:layout_marginTop="32dp"
            />

        <Button
            android:text="Place Order"
            android:layout_width="match_parent"
            android:textColor="@color/zc"
            android:background="@color/i"
            android:layout_height="wrap_content"
            android:id="@+id/placeorder"
            android:layout_marginTop="32dp"
            />

        <Button
            android:text="Comments"
            android:layout_width="match_parent"
            android:textColor="@color/zc"
            android:background="@color/i"
            android:layout_height="wrap_content"
            android:id="@+id/comments"
            android:layout_marginTop="32dp"
             />

    </LinearLayout>
</RelativeLayout>
    </ScrollView>
