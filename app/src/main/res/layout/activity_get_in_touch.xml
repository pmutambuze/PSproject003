<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_in_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.GetInTouch">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Fill the Form Below"
            android:layout_width="match_parent"
            android:id="@+id/textView9"
            android:layout_height="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout4" />

        <TextView
            android:text="Enter Phone Number"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. 0753 222529"
            android:ems="10"
            android:id="@+id/editText4"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Comment Subject"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView4"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:hint="e.g. Making Payment"
            android:ems="10"
            android:id="@+id/editText5"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01" />

        <TextView
            android:text="Comment"
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView7"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@color/zc"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText8"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Thank you for getting in touch."
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView10"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:textSize="14sp" />


        <Button
            android:text="Submit Your Comment"
            android:background="@color/g"
            android:textColor="@color/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button6" />

        <TextView
            android:text="We shall get back to you shortly."
            android:layout_width="match_parent"
            android:id="@+id/textView26"
            android:layout_height="20dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout4"
            android:layout_weight="0.55" />


    </LinearLayout>
</RelativeLayout>
</ScrollView>