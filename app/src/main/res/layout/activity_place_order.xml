<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_place_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.PlaceOrder">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/b"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Filling the order form below"
            android:layout_width="325dp"
            android:layout_height="20dp"
            android:id="@+id/textView4"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout4" />
        <TextView
            android:text="Enter Phone Number."
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="5dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:inputType="phone"
            android:digits="1234567890"
            android:background="@color/zc"
            android:hint="e.g. 0753 222529"
            android:ems="10"
            android:id="@+id/editText4"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.32" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="25dp"
            android:id="@+id/textView2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Enter required produce."
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. Matooke"
            android:ems="10"
            android:id="@+id/editText5"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView5"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Select the category of required produce."
            android:textAlignment="textStart" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/spinner2"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/editText5"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView7"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Produce Details."
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView12"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Quality Preference."
            android:textAlignment="textStart" />

        <EditText

            android:inputType="phone"
            android:digits="12345"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="between 1 - 5 "
            android:ems="10"
            android:id="@+id/editText2"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView14"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Required Quantity."
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 20 Bags"
            android:ems="10"
            android:id="@+id/editText7"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView13"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Need date."
            android:textAlignment="textStart" />

        <EditText

            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:inputType="date"
            android:hint="e.g. 27/08/2017"
            android:ems="10"
            android:id="@+id/editText12"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView15"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Order Date."
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 14/04/2017"
            android:ems="10"
            android:id="@+id/editText13"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView17"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Unit Price"
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 12,000 UGX"
            android:ems="10"
            android:id="@+id/editText3"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView18"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Amount Paid"
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 235,000 UGX"
            android:ems="10"
            android:id="@+id/editText8"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Amount Accepted"
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 789,000 UGX"
            android:ems="10"
            android:id="@+id/editText27"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:text="Submit Order"
        android:background="@color/g"
        android:textColor="@color/c"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="545dp" />

</RelativeLayout>
    </ScrollView>
