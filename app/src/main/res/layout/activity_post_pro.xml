<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bifam.practice.PostPro">

    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:weightSum="1"
       android:id="@+id/linearLayout4"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginBottom="16dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true">

       <TextView
           android:text="Start selling by filling the form below"
           android:layout_width="325dp"
           android:layout_height="20dp"
           android:id="@+id/textView4"
           android:textColor="@color/colorPrimary"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/linearLayout4" />
       <TextView
           android:text="Enter Phone Number"
           android:layout_width="325dp"
           android:layout_height="25dp"
           android:id="@+id/textView3"
           android:textColor="@android:color/black"
           android:textAlignment="textStart"
           android:paddingTop="5dp"
           android:textSize="14sp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:background="@color/zc"
           android:inputType="textPersonName"
           android:hint="e.g. 0753 222529"
           android:ems="10"
           android:id="@+id/contact"
           android:textAlignment="textStart"
           android:textSize="12sp"
           android:layout_below="@+id/spinner2"
           android:layout_alignParentStart="true"
           android:layout_weight="0.32" />

       <TextView
           android:layout_width="325dp"
           android:layout_height="25dp"
           android:id="@+id/textView2"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Enter the name of the produce."
           android:textAlignment="textStart" />

       <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. Matooke"
            android:ems="10"
            android:id="@+id/postname"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:id="@+id/textView5"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Select the category of your produce."
           android:textAlignment="textStart" />

       <Spinner
       android:layout_width="match_parent"
       android:layout_height="15dp"
       android:id="@+id/category"
       android:spinnerMode="dropdown"
       android:layout_below="@+id/editText5"
       android:layout_alignParentStart="true" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:id="@+id/textView7"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Describe your produce."
           android:textAlignment="textStart" />

       <TextView
           android:layout_width="106dp"
           android:layout_height="25dp"
           android:id="@+id/textView12"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Feature 1."
           android:textAlignment="textStart" />

       <EditText

           android:inputType="textPersonName"
           android:layout_width="200dp"
           android:layout_height="25dp"
           android:background="@color/zc"
           android:hint="e.g. High breed"
           android:ems="10"
           android:id="@+id/featureone"
           android:textAlignment="textStart"
           android:textSize="12sp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/linearLayout" />

       <TextView
           android:layout_width="106dp"
           android:layout_height="25dp"
           android:id="@+id/textView14"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Feature 2."
           android:textAlignment="textStart" />

       <EditText

           android:inputType="textPersonName"
           android:layout_width="200dp"
           android:layout_height="25dp"
           android:background="@color/zc"
           android:hint="e.g. Broilers"
           android:ems="10"
           android:id="@+id/featuretwo"
           android:textAlignment="textStart"
           android:textSize="12sp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/linearLayout" />

       <TextView
           android:layout_width="106dp"
           android:layout_height="25dp"
           android:id="@+id/textView13"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Feature 3."
           android:textAlignment="textStart" />

       <EditText

           android:inputType="textPersonName"
           android:layout_width="200dp"
           android:layout_height="25dp"
           android:background="@color/zc"
           android:hint="e.g. 1 Day Chicks"
           android:ems="10"
           android:id="@+id/featurethree"
           android:textAlignment="textStart"
           android:textSize="12sp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/linearLayout" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:id="@+id/textView15"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Description."
           android:textAlignment="textStart" />

       <EditText

           android:inputType="textPersonName"
           android:layout_width="match_parent"
           android:layout_height="85dp"
           android:background="@color/zc"
           android:hint="Description should include your exact location."
           android:ems="10"
           android:id="@+id/description"
           android:textAlignment="textStart"
           android:textSize="14sp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/linearLayout" />

       <Button
           android:text="Take Picture"
           android:onClick="btnClick"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/button8" />

       <ImageView
       android:id="@+id/idImageView"
       android:layout_width="match_parent"
       android:layout_height="123dp"
       android:gravity="center"
       android:background="@android:drawable/ic_menu_camera"
       android:layout_above="@+id/editText11"
           android:foregroundGravity="center"
       android:layout_centerHorizontal="true" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:id="@+id/textView16"
           android:textColor="@color/colorPrimary"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Your Offer."
           android:textAlignment="center" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:id="@+id/textView17"
           android:textColor="@android:color/black"
           android:textSize="14sp"
           android:paddingTop="5dp"
           android:text="Quantity"
           android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 15 bags"
            android:ems="10"
            android:id="@+id/editText3"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView18"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Unit Price"
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 6,000 UGX"
            android:ems="10"
            android:id="@+id/editText8"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView19"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Total"
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 180,000 UGX"
            android:ems="10"
            android:id="@+id/editText9"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView20"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:text="Expiry Date"
            android:textAlignment="textStart" />

        <EditText

            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/zc"
            android:hint="e.g. 13/07/2017"
            android:ems="10"
            android:id="@+id/editText10"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />



    </LinearLayout>

    <Button
        android:text="Discard"
        android:background="@color/zb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

    <Button
        android:text="Post"
        android:textColor="@color/zc"
        android:background="@color/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:id="@+id/post" />

</RelativeLayout>
</ScrollView>